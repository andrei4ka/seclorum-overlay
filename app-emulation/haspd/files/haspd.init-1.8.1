start() {
	ebegin "Starting haspd"
	eval start-stop-daemon --start --quiet --pidfile /var/run/aksusbd.pid --exec /usr/sbin/aksusbd --
	eend $?
}

stop() {
	ebegin "Stopping haspd"
	start-stop-daemon --stop --signal 2 --quiet --pidfile /var/run/aksusbd.pid
	eend $?
}
